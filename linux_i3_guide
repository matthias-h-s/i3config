            sudo visudo

            [USERNAME] ALL=(ALL:ALL) ALL

    31. sudo mkdir /media/usb
            sudo fdisk -l
            sudo mount /dev/[USB NAME] /media/usb/

                sudo cp -r /media/usb/config    ~/.config/i3/
                sudo cp -r /media/usb/i3status.conf    ~/.config/i3status/
        sudo chown $USER:$USER ~/.config/i3status/i3status.conf


[Enable tap to click in i3 WM:]

    sudo mkdir -p /etc/X11/xorg.conf.d
    sudo touch /etc/X11/xorg.conf.d/90-touchpad.conf

    sudo vim /etc/X11/xorg.conf.d/90-touchpad.conf

[fill in the script and save it]

   Section "InputClass"
        Identifier "touchpad"
        MatchIsTouchpad "on"
        Driver "libinput"
        Option "Tapping" "on"
        Option "TappingButtonMap" "lrm"
        Option "NaturalScrolling" "on"
        Option "ScrollMethod" "twofinger"
    EndSection

terminal:
    32. nmtui
    33. rofi-theme-selector
    34. sudo vim .bashrc [add "neofetch" on the end]

bring "~/.config/i3/config" and "~/.config/i3status/i3status.conf" and ~/.config/rofi/config.rasi



[download any SDDM themes, unpack it and copy it to /usr/share/sddm/theme/]

sudo mkdir  /usr/lib/sddm/sddm.conf.d/
sudo cp -r /home/matthias/Downloads/[THEME FOLDER]  /usr/share/sddm/themes

sudo vim  /usr/lib/sddm/sddm.conf.d/default.conf

[Theme]
Current=[NAME OF THE THEME]


